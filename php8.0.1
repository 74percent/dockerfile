FROM php:8.0.1-fpm-alpine3.12

RUN apk add --no-cache --virtual .build-deps \
        libxml2-dev \
        shadow \
        autoconf \
        g++ \
        make \
        git \
        libmcrypt-dev \
        librdkafka-dev \
        libpng-dev \
        libzip-dev \
        imagemagick6-dev \
        ffmpeg-dev \
        openssl-dev \
    && apk add libstdc++ libmcrypt librdkafka ssmtp libpng libzip imagemagick6 ffmpeg openssl \
    && docker-php-ext-install pdo_mysql \
    && docker-php-ext-install bcmath \
    && pecl install redis \
    && pecl install channel://pecl.php.net/mcrypt-1.0.4 \ 
    && pecl install mongodb \
    && pecl install rdkafka \
    && docker-php-ext-enable redis mcrypt mongodb rdkafka \
    && docker-php-ext-install sockets \
    && docker-php-ext-install gd \
    && docker-php-ext-install zip \
    && docker-php-ext-install opcache \
    && git clone https://github.com/Imagick/imagick \
    && ( \
        cd imagick \
        && phpize \
        && ./configure \
        && make \
        && make install \
    ) \
    && rm -rf imagick \
    && docker-php-ext-enable imagick \
    && curl -fsSL 'https://pecl.php.net/get/swoole-4.6.2.tgz' -o swoole.tgz \
    && mkdir -p swoole \
    && tar -xf swoole.tgz -C swoole --strip-components=1 \
    && rm swoole.tgz \
    && ( \
        cd swoole \
        && phpize \
        && ./configure --enable-mysqlnd --enable-sockets --enable-openssl \
        && make -j "$(nproc)" \
        && make install \
    ) \
    && rm -r swoole \
    && docker-php-ext-enable swoole \
    && apk del .build-deps

# install composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
